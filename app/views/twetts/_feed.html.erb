<div class="column is-half">
  <% if user_signed_in? %>
  <article class="media-box">
    <figure class="media-left">
      <p class="image is-64x64">
        <%= gravatar_image_tag(current_user.email, size: 64, alt: current_user.name) %>
      </p>
    </figure>
    <div class="media-content">
      <%= render 'twetts/form' %>
    </div>
  </article>
  <% end %>


<% @twetts.each do |twett| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <%= gravatar_image_tag(twett.user.email, size: 64, alt: twett.user.name) %>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong><%= twett.user.name %></strong><br />
          <small><%= twett.user.username %></small><br/>
          <p><%= twett.twett %></p>
        </div>
        <% if user_signed_in? %>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to twett, class: "level-item" do %>
            <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to edit_twett_path(twett), class: "level-item" do %>
            <span class="icon"><i class="fas fa-pencil-alt" aria-hidden="true"></i></span>
            <% end %>
            <%= link_to twett, method: :delete, data: { confirm: "Are you sure you want to delete this Twett?" } do %>
            <span class="icon"><i class="fas fa-trash" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
        <% end %>
      </div>
    </article>
  </div>
<% end %>
</div>
