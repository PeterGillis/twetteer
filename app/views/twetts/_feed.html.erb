<div class="column is-half">
  <article class="media-box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x64.png">
      </p>
    </figure>
    <div class="media-content">
      <%= render 'twetts/form' %>
    </div>
  </article>


<% @twetts.each do |twett| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Peter Gillis</strong><br />
          <small>@peterg</small><br/>
          <p><%= twett.twett %></p>
        </div>
        <nav class="level">
          <div class="level-left is-mobile">
            <%= link_to twett, class: "level-item" do %>
            <span class="icon"><i class="fa fa-link" aria-hidden="true"></i></span>
            <% end %>
            <% link_to edit_twett_path(twett), class: "level-item" do %>
            <span class="icon"><i class="fa fa-pencil" aria-hidden="true"></i></span>
            <% end %>
            <% link_to twett, method: :delete, data: { confirm: "Are you sure you want to delete this Twett?" } do %>
            <span class="icon"><i class="fa fa-trash-o" aria-hidden="true"></i></span>
            <% end %>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
</div>
