<%= simple_form_for(@twett) do |f| %>
<%= f.error_notification %>
<div class="field">
  <div class="control">
    <%= f.input :twett, label: "Twett about it", input_html: { class: "textarea "}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new twett..." %>
  </div>
</div>
